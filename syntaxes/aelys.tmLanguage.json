{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Aelys",
    "scopeName": "source.aelys",
    "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#attributes" },
        { "include": "#types" },
        { "include": "#functions" }
    ],
    "repository": {
        "comments": {
            "patterns": [{
                "name": "comment.line.double-slash.aelys",
                "match": "//.*$"
            }]
        },
        "keywords": {
            "patterns": [{
                "name": "keyword.control.aelys",
                "match": "\\b(if|else|while|for|in|step|return|break|continue|needs|as|from|pub)\\b"
            }, {
                "name": "keyword.other.aelys",
                "match": "\\b(let|mut|fn)\\b"
            }, {
                "name": "constant.language.aelys",
                "match": "\\b(true|false|null)\\b"
            }, {
                "name": "keyword.operator.logical.aelys",
                "match": "\\b(and|or|not)\\b"
            }]
        },
        "attributes": {
            "patterns": [{
                "name": "entity.name.function.decorator.aelys",
                "match": "@[a-zA-Z_]+"
            }]
        },
        "strings": {
            "name": "string.quoted.double.aelys",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape.aelys",
                    "match": "\\\\."
                },
                {
                    "name": "variable.interpolation.aelys",
                    "begin": "\\{",
                    "end": "\\}",
                    "patterns": [ { "include": "source.aelys" } ]
                }
            ]
        },
        "types": {
            "patterns": [{
                "name": "storage.type.aelys",
                "match": "\\b(int|float|string|bool|Array|Vec)\\b"
            }]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.hex.aelys",
                    "match": "\\b0x[0-9a-fA-F_]+\\b"
                },
                {
                    "name": "constant.numeric.binary.aelys",
                    "match": "\\b0b[01_]+\\b"
                },
                {
                    "name": "constant.numeric.decimal.aelys",
                    "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?([eE][+-]?[0-9_]+)?\\b"
                }
            ]
        },
        "functions": {
            "patterns": [{
                "name": "entity.name.function.aelys",
                "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
            }]
        }
    }
}