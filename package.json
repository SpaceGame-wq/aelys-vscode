{
    "name": "aelys-lang",
    "displayName": "Aelys Programming Language",
    "description": "Full syntax highlighting and support for the Aelys language",
    "version": "0.4.1",
    "publisher": "SpaceGame",
    "engines": {
        "vscode": "^1.75.0"
    },
    "main": "./out/extension.js",
    "icon": "./asset/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/SpaceGame-wq/aelys-vscode"
    },
    "license": "BSD-3-Clause",
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [],
    "contributes": {
        "languages": [
            {
                "id": "aelys",
                "aliases": [
                    "Aelys",
                    "aelys"
                ],
                "extensions": [
                    ".aelys",
                    ".ae"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "aelys",
                "scopeName": "source.aelys",
                "path": "./syntaxes/aelys.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "aelys",
                "path": "./snippets/snippets.json"
            }
        ],
        "commands": [
            {
                "command": "aelys.run",
                "title": "Aelys: Run current file",
                "icon": "$(play)"
            },
            {
                "command": "aelys.runWithArgs",
                "title": "Aelys: Run with Arguments...",
                "icon": "$(settings-gear)"
            },
            {
                "command": "aelys.update",
                "title": "Aelys: Check for Compiler Updates",
                "icon": "$(refresh)"
            },
            {
                "command": "aelys.inspectBytecode",
                "title": "Aelys: Inspect Bytecode (Asm)",
                "icon": "$(search-visual)" 
            },
            {
                "command": "aelys.inspectBytecodeWithArgs",
                "title": "Aelys: Inspect Bytecode with Args...",
                "icon": "$(settings-gear)"
            },
            {
                "command": "aelys.openRepl",
                "title": "Aelys: Open Interactive REPL",
                "icon": "$(terminal)"
            },
            {
                "command": "aelys.sendToRepl",
                "title": "Aelys: Send Selection to REPL",
                "icon": "$(chevron-right)"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "aelys.sendToRepl",
                    "when": "editorHasSelection && resourceExtname == .aelys || resourceExtname == .ae",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "aelys.openRepl",
                    "when": "resourceExtname == .aelys || resourceExtname == .ae",
                    "group": "navigation@3"
                }
            ],
            "editor/title/run": [
                {
                    "command": "aelys.run",
                    "when": "resourceExtname == .aelys",
                    "group": "navigation"
                },
                {
                    "command": "aelys.runWithArgs",
                    "when": "resourceExtname == .aelys",
                    "group": "navigation"
                },
                {
                    "command": "aelys.inspectBytecode",
                    "when": "resourceExtname == .aelys || resourceExtname == .ae",
                    "group": "navigation@1"
                },
                {
                    "command": "aelys.inspectBytecodeWithArgs",
                    "when": "resourceExtname == .aelys || resourceExtname == .ae",
                    "group": "navigation@2"
                }
            ]
        },
        "configuration": {
            "title": "Aelys",
            "properties": {
                "aelys.autoUpdate": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically check for compiler updates on startup."
                },
                "aelys.compiler.version": {
                    "type": "string",
                    "default": "latest",
                    "description": "Specify a version of the Aelys compiler (e.g., 'v0.1.2') or 'latest'."
                },
                "aelys.compiler.autoCheck": {
                    "type": "boolean",
                    "default": true,
                    "description": "Check for updates on startup."
                },
                "aelys.execution.defaultArguments": {
                    "type": "string",
                    "default": "--ae-trusted=true",
                    "description": "Default arguments passed to the Aelys compiler when running a file."
                },
                "aelys.compiler.path": {
                    "type": "string",
                    "default": "",
                    "description": "Absolute path to a local Aelys executable. If set, this will be used instead of the downloaded version."
                },
                "aelys.asm.defaultArguments": {
                    "type": "string",
                    "default": "-O0 --ae-trusted=true",
                    "description": "Default arguments for the Bytecode Inspector (e.g., -O2, -O3)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "axios": "^1.6.0"
    },
    "devDependencies": {
        "@types/node": "^18.2.3",
        "@types/vscode": "^1.75.0",
        "typescript": "^5.9.3"
    }
}
