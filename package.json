{
    "name": "aelys-lang",
    "displayName": "Aelys Programming Language",
    "description": "Full syntax highlighting and support for the Aelys language",
    "version": "0.1.0",
    "publisher": "AlexisGr", 
    "engines": {
        "vscode": "^1.70.0"
    },
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ton-pseudo/aelys-vscode"
    },
    "license": "MIT",
    "categories": ["Programming Languages"],
    "contributes": {
        "languages": [{
            "id": "aelys",
            "aliases": ["Aelys", "aelys"],
            "extensions": [".aelys", ".ae"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "aelys",
            "scopeName": "source.aelys",
            "path": "./syntaxes/aelys.tmLanguage.json"
        }]
    }
}